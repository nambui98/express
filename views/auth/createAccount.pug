extends ../layouts/common.pug
block content
    div(class="d-flex flex-column justify-content-center align-items-center")
        h1 Create Account
        if errors
            each error in errors
                .alert.alert-danger=error
        
        form(action="/auth/createAccount", method="POST",enctype = "multipart/form-data")
            div.form-group
                label(for="name").m-0 Tên đăng nhập
                input(type="text", name="name",class="form-control", value=value ? value.name : "")#name
                label(for="phone").m-0.mt-3 Số điện thoại
                input(type="text", name="phone",class="form-control", value=value ? value.phone : "")#phone
                label(for="email").m-0.mt-3 Email
                input(type="text", name="email",class="form-control", value=value ? value.email : "")#email
                label(for="avatar").m-0.mt-3 Ảnh
                input(type="file", name="avatar",class="form-control-file")#avatar
                label(for="PassWord").m-0.mt-3 Mật khẩu
                input(type="PassWord", name="PassWord",class="form-control")#PassWord
                button(class="btn btn-danger").mt-3 Đăng ký
    
